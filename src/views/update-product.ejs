<h1 class="mt-5 mb-4">Update Product</h1>
<%if(errorMsg){%>
<div class="alert alert-danger" role="alert">
  <%= errorMsg %>
</div>
<%}%>
<form action="/update-product" method="post">
    <input type="hidden" class="form-control" id="id" name="id" value="<%=product.id%>" placeholder="">
    <div class="form-group mb-3">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" value="<%=product.name%>" placeholder="Enter name">
    </div>
    <div class="form-group mb-3">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" value="<%=product.desc%>" name="desc" placeholder="Write Description">
    </div>
    <div class="form-group mb-3">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" name="price" value="<%=product.price%>" placeholder="Enter price">
    </div>
    <div class="form-group mb-3">
        <label for="imageUrl">URL</label>
        <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%=product.imageUrl%>" placeholder="Image Url">
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>